<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000000">

    <ImageView
        android:id="@+id/fragment_help_tutorial_imageview_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        app:layout_widthPercent="50%" />

    <ImageView
        android:id="@+id/fragment_help_tutorial_imageview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/fragment_help_tutorial_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/fragment_help_tutorial_imageview"
        android:layout_toRightOf="@id/fragment_help_tutorial_imageview"
        android:autoLink="web"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:textColor="@color/tutorial_titleTextColor"
        android:textSize="24sp"
        app:layout_widthPercent="50%"
        tools:text="Browse this wonderful tutorial." />

    <TextView
        android:id="@+id/fragment_help_tutorial_subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_help_tutorial_text"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_toEndOf="@id/fragment_help_tutorial_imageview"
        android:layout_toRightOf="@id/fragment_help_tutorial_imageview"
        android:autoLink="web"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:textColor="@color/tutorial_subtitleTextColor"
        android:textSize="16sp"
        app:layout_widthPercent="50%"
        tools:text="Line 2 of this description" />

</android.support.percent.PercentRelativeLayout>